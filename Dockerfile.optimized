# Optimized Dockerfile for RunPod deployment
# GPU-accelerated Northeastern University Chatbot - Space Optimized
FROM python:3.11-slim

# Set working directory
WORKDIR /

# Install minimal system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    && rm -rf /var/lib/apt/lists/* \
    && apt-get clean

# Install PyTorch CPU version (smaller size)
RUN pip install --no-cache-dir torch torchvision torchaudio --index-url https://download.pytorch.org/whl/cpu

# Copy and install Python requirements
COPY requirements_runpod.txt .
RUN pip install --no-cache-dir -r requirements_runpod.txt

# Copy the optimized handler
COPY runpod_optimized_handler.py .

# Set environment variables for optimization
ENV PYTHONUNBUFFERED=1
ENV CUDA_VISIBLE_DEVICES=0
ENV TOKENIZERS_PARALLELISM=false

# Create non-root user for security
RUN useradd -m -u 1000 runpod && chown -R runpod:runpod /
USER runpod

# Command to run when the container starts
CMD ["python", "-u", "runpod_optimized_handler.py"]
