# Optimized Dockerfile for RunPod deployment
# GPU-accelerated Northeastern University Chatbot
FROM python:3.11-slim

# Set working directory
WORKDIR /

# Install system dependencies for GPU support
RUN apt-get update && apt-get install -y \
    build-essential \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Install PyTorch with CUDA support for GPU acceleration
RUN pip install --no-cache-dir torch torchvision torchaudio --index-url https://download.pytorch.org/whl/cu121

# Copy and install Python requirements
COPY requirements_runpod.txt .
RUN pip install --no-cache-dir -r requirements_runpod.txt

# Copy the optimized handler
COPY runpod_optimized_handler.py .

# Set environment variables for optimization
ENV PYTHONUNBUFFERED=1
ENV CUDA_VISIBLE_DEVICES=0
ENV TOKENIZERS_PARALLELISM=false

# Create non-root user for security
RUN useradd -m -u 1000 runpod && chown -R runpod:runpod /
USER runpod

# Command to run when the container starts
CMD ["python", "-u", "runpod_optimized_handler.py"]